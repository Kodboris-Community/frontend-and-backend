# Use the slim version of Node.js 18.15.0
FROM node:18.15.0-slim

# Set the working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Start the server
CMD ["node", "server.js"]

# Expose the port
EXPOSE 3001